{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "dev": {
            "dependsOn": [
                "^dev"
            ],
            "cache": false,
            "persistent": true
        },
        "dev-example": {
            "dependsOn": [
                "^dev-example"
            ],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "cache": true
        }
    }
}